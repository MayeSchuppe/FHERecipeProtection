{
  "name": "secret-recipe-protection",
  "version": "1.0.0",
  "description": "A revolutionary confidential culinary technology platform that leverages Fully Homomorphic Encryption (FHE) to protect proprietary recipes and cooking formulas. This decentralized application enables chefs and culinary professionals to securely share their secret recipes while maintaining complete privacy and control over their intellectual property.",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:basic": "hardhat test test/SecretRecipeProtection.test.js",
    "test:comprehensive": "hardhat test test/SecretRecipeProtection.comprehensive.test.js",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "lint": "npm run lint:sol && npm run lint:js && npm run prettier:check",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint \"contracts/**/*.sol\" --fix",
    "lint:js:fix": "eslint \"**/*.js\" --fix",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,yml}\"",
    "format": "npm run prettier:write",
    "format:check": "npm run prettier:check",
    "audit:check": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm run audit:check && npm run lint:sol",
    "performance:analyze": "npm run test:gas && npm run compile",
    "quality": "npm run lint && npm run test && npm run security:check",
    "deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "verify:sepolia": "hardhat run scripts/verify.js --network sepolia",
    "interact:localhost": "hardhat run scripts/interact.js --network localhost",
    "interact:sepolia": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network hardhat",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "prepare": "husky"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "fhe",
    "encryption",
    "smart-contracts",
    "hardhat",
    "recipes",
    "privacy"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-verify": "^2.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "hardhat": "^2.26.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1"
  },
  "dependencies": {
    "@fhevm/solidity": "^0.8.0",
    "@zama-fhe/oracle-solidity": "^0.2.0"
  }
}
