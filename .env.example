# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# RPC URLs for different networks
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.llamarpc.com
LOCALHOST_RPC_URL=http://127.0.0.1:8545

# Network Chain IDs
SEPOLIA_CHAIN_ID=11155111
MAINNET_CHAIN_ID=1

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Private key for deployment (DO NOT commit your actual private key!)
# Use hardware wallet or secure key management in production
PRIVATE_KEY=your_private_key_here

# Mnemonic (alternative to private key)
MNEMONIC=your twelve word mnemonic phrase here

# Pauser role address (for emergency pause functionality)
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Owner/Admin addresses
OWNER_ADDRESS=0x0000000000000000000000000000000000000000
ADMIN_ADDRESS=0x0000000000000000000000000000000000000000

# Multi-sig wallet addresses
MULTISIG_WALLET=0x0000000000000000000000000000000000000000

# =============================================================================
# API KEYS & SERVICES
# =============================================================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Infura Project ID
INFURA_PROJECT_ID=your_infura_project_id_here

# Alchemy API Key
ALCHEMY_API_KEY=your_alchemy_api_key_here

# CoinMarketCap API key for gas price reporting
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Codecov token for coverage reporting
CODECOV_TOKEN=your_codecov_token_here

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Contract addresses (update after deployment)
CONTRACT_ADDRESS=0x72E13974c2158A875bAdbc860bfe7A3d932AA612
PROXY_ADDRESS=0x0000000000000000000000000000000000000000

# Deployment parameters
INITIAL_SUPPLY=1000000
DECIMALS=18

# =============================================================================
# GAS & PERFORMANCE
# =============================================================================

# Gas reporting
REPORT_GAS=false
GAS_PRICE=auto
GAS_LIMIT=8000000

# Optimizer settings
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# =============================================================================
# TESTING & DEVELOPMENT
# =============================================================================

# Test configuration
TEST_TIMEOUT=40000
FORK_BLOCK_NUMBER=latest

# Enable/disable specific test suites
RUN_UNIT_TESTS=true
RUN_INTEGRATION_TESTS=true
RUN_COVERAGE=false

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# Security audit settings
ENABLE_SLITHER=false
ENABLE_MYTHRIL=false
ENABLE_ECHIDNA=false

# Rate limiting
MAX_REQUESTS_PER_SECOND=10
RATE_LIMIT_ENABLED=false

# DoS protection
MAX_RECIPE_PER_CHEF=100
MAX_ACCESS_REQUESTS_PER_USER=10
REQUEST_COOLDOWN_PERIOD=3600

# Emergency controls
EMERGENCY_PAUSE=false
CIRCUIT_BREAKER_THRESHOLD=1000000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info
ENABLE_VERBOSE_LOGGING=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# FRONTEND CONFIGURATION (if applicable)
# =============================================================================

# API endpoints
API_URL=http://localhost:3000
WEB3_PROVIDER_URL=http://localhost:8545

# Feature flags
ENABLE_ANALYTICS=false
ENABLE_ERROR_TRACKING=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit actual private keys or sensitive data
# 2. Use hardware wallets for production deployments
# 3. Rotate API keys regularly
# 4. Enable security features in production
# 5. Set appropriate rate limits and DoS protection
# 6. Monitor gas usage and optimize regularly
# 7. Keep this file in sync with .env.example
# =============================================================================
